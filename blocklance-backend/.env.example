# MongoDB Atlas connection string
MONGO_URI=
MONGO_DB=

# Server
PORT=4000

# CORS: set to your frontend URL (e.g., http://localhost:3000)
CORS_ORIGIN=http://localhost:3000

# Backend JWT for MetaMask sessions
JWT_SECRET=
JWT_EXPIRES_IN=1h

# Firebase Admin SDK service account values
# You can either set these env vars OR provide a JSON file path via GOOGLE_APPLICATION_CREDENTIALS
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# IMPORTANT: If copying from JSON, replace actual newlines in private key with \n
# Example: "-----BEGIN PRIVATE KEY-----\nABC...\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY=

# Cloudinary configuration for image uploads
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Blockchain service mode: "mock" or "chain"
MODE=mock

# Ethers/Contract integration
BLOCKCHAIN_RPC_URL=
BLOCKCHAIN_PRIVATE_KEY=
ESCROW_CONTRACT_ADDRESS=


